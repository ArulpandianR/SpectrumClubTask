<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="60dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogNameAscending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Name Ascending"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogNameDescending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Name Descending"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogAgeAscending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Age Ascending"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogAgeDescending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Age Descending"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>